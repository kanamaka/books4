<head>
 <meta charset="utf-8">
 <link rel="stylesheet" href="bookers2/app/assets/stylesheets/users.scss">
 <script src="https://kit.fontawesome.com/34c9407723.js" crossorigin="anonymous"></script>
</head>
<main class="user">
    <div class="container">
     <div class="row">
      <div class="col-md-3">
       <% if @book.errors.any? %>
         <%= @book.errors.count %>
         errors prohibited this obj from being saved:
         <% @book.errors.full_messages.each do |message| %>
          <li>
           <%= message %>
          </li>
         <% end %>
         <% end %>
       <div class="text-success" >
       <%= flash[:notice] %>
       </div>
         <h2>
           User info
           <%= attachment_image_tag @user,:profile_image,fallback: "bou.jpg", size: "100x100" %>
         </h2>
         <table class="table">
            <tbody>
                 <tr></tr>
                 <th>
                   name
                   <%= current_user.name %>
                 </th>
                 <th>
                 </th>
                 <tr></tr>
                 <th>
                   introduction
                   <%= current_user.introduction %>
                 </th>
                 <th>
                 </th>
            </tbody>
         </table>
         <div class="edit">
          <%= link_to " ", edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
         </div>
      <h2>
        New book
      </h2>
      <td class="form">
      <%= form_with model: @newbook, local:true do |f| %>
      <p4>Title</p4><br>
        <%= f.text_field :title %><br>
      <p4>Opinion</p4><br>
        <%= f.text_area :body %><br>
        <%= f.submit "Create Book", class: "btn btn-success" %>
      <% end %>
      </td>
      </div>
         <div class="col-md-8 offset-md-1">
           <h2>Book detail</h2>
           <table class="table">
            <thead>
             <tr>
              <td>
               <%= link_to book_path do %>
               <%= attachment_image_tag @user,:profile_image,fallback: "bou.jpg", size: "100x100" %><br>
               <%= current_user.name %>
               <% end %>
              </td>
              <td>
               <%= link_to book_path do %>
               <%= @book.title %>
               <% end %>
              </td>
              <td>
               <%= @book.body %>
              </td>
              <td>
               <% if @book.user.id == current_user.id %>
                <%= link_to "Edit", edit_book_path(@book), class: "btn btn-success btn-block" %>
              </td>
              <td>
               <%= link_to "Destroy", book_path(@book.id), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn btn-danger btn-block"  %>
              </td>
              <% end %>
             </tr>
            </thead>
            <tbody>
            </tbody>
        　 </table>
         </div>
      </div>
    </div>