 <h1 class="edittitle">
  Editing Book
 </h1>
 <div class="text-danger">
 <% if @book.errors.any? %>
 <%= @book.errors.count %>
  errors prohibited this obj from being saved:
  <% @book.errors.full_messages.each do |message| %>
   <li>
    <%= message %>
   </li>
  <% end %>
 <% end %>
 </div>
 <%= form_with model: @book, local:true do |f| %>
 <%= f.label :title, class: "editbook" %><br>
 <%= f.text_field :title, class: "editbook" %><br>
 <%= f.label :Opinion, class: "editbook" %><br>
 <%= f.text_area :body, class: "editbook" %><br>
 <%= f.submit "Update Book", class: "btn btn-success" %>
 <% end %>
