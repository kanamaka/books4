
 <h1 class="edittitle">
  Editing Book
 </h1>
 <%= form_with model: @book_new, local:true do |f| %>
 <%= f.label :title, class: "editbook" %><br>
 <%= f.text_field :title, class: "editbook" %><br>
 <%= f.label :Opinion, class: "editbook" %><br>
 <%= f.text_area :body, class: "editbook" %><br>
