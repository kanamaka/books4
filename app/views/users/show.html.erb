<!DOCTYPE html>
<html>
<head>
 <meta charset="utf-8">
 <link rel="stylesheet" href="bookers2/app/assets/stylesheets/users.scss">
 <script src="https://kit.fontawesome.com/34c9407723.js" crossorigin="anonymous"></script>
</head>
<main class="user">
     <p>
     <% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
    <% end %>
    <div class="container">
     <div class="row">
      <div class="col-lg-4">
         <h2>
           User info
         </h2>
         <%= attachment_image_tag(@user,:profile_image,:fill,80,80,fallback: "bou.jpg") %>
         <table class="table">
            <tbody>
                 <tr></tr>
                 <th>
                   name
                   <%= current_user.name %>
                 </th>
                 <th>
                 </th>
                 <tr></tr>
                 <th>
                   introduction
                   <%= current_user.introduction %>
                 </th>
                 <th>
                 </th>
            </tbody>
         </table>
         <div class="edit">
          <%= link_to " ", edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
         </div>
      </button>
      <h2>
        New book
      </h2>
      <td class="form">
       <% if @book.errors.any? %>
       <%= @book.errors.count %>
       <% @book.errors.full_messages.each do |message| %>
        <%= message %>
       <% end %>
      <% end %>
      <%= form_with model: @book, local:true do |f| %>
      <p4>Title</p4><br>
        <%= f.text_field :title %><br>
      <p4>Opinion</p4><br>
        <%= f.text_area :body %><br>
      <%= f.submit "Create book", class: "btn btn-success" %>
      <% end %>
      </td>
      </div>
         <div class="col-lg-8">
           <h2>Books</h2>
           <table class="table">
            <thead>
             <th>
             </th>
             <th>
              Title
             </th>
             <th>
              Opinion
             </th>
            </thead>
            <tbody>
             <% @books.each do |book| %>
              <tr>
               <td>
                <%= attachment_image_tag(@user,:profile_image,:fill,80,80,fallback: "bou.jpg") %>
               </td>
               <td>
                <%= link_to book.title, book_path(book.id) %>
               </td>
               <td>
                <%= book.body %>
               </td>
              </tr>
              <% end %>
            </tbody>
           </table>
           </table>
        </div>
      </div>
      </div>
    </html>