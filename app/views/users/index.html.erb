<head>
 <meta charset="utf-8">
 <%= stylesheet_link_tag  "application", media: "all", "data-turbolinks-track": "reload" %>
 <script src="https://kit.fontawesome.com/34c9407723.js" crossorigin="anonymous"></script>
</head>
<main class="user">
    <div class="container">
     <div class="row">
      <div class="col-md-3">
       <div class="text-danger">
         <% if @user.errors.any? %>
         <%= @user.errors.count %>
         errors prohibited this obj from being saved:
         <% @user.errors.full_messages.each do |message| %>
          <li>
           <%= message %>
          </li>
         <% end %>
         <% end %>
        </div>
       <div class="text-success">
        <%= flash[:notice] %>
       </div>
         <h2>
           User info
         </h2>
           <%= attachment_image_tag @user,:profile_image,fallback: "bou.jpg", size: "100x100" %>
         <table class="table">
            <tbody>
             <tr></tr>
               <th>
                name
                <%= current_user.name %>
               </th>
               <th>
               </th>
               <tr></tr>
               <th>
                introduction
                <%= current_user.introduction %>
               </th>
               <th>
               </th>
            </tbody>
         </table>
         <div class="edit">
          <%= link_to " ", edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
         </div>
　　　　　　<h2>
　　　　　　  New book
　　　　　　</h2>
　　　　　　<td class="form-control">
　　　　　　<%= form_with model:@book, local:true do |f| %>
　　　　　　<p4>Title</p4><br>
　　　　　　  <%= f.text_field :title %><br>
　　　　　　<p4>Opinion</p4><br>
　　　　　　  <%= f.text_area :body %>
　　　　　　<%= f.submit "Create Book", class: "btn btn-success" %>
　　　　　　<% end %>
　　　　　　</td>
　　　</div>
         <div class="col-md-8 offset-md-1">
           <h2>
             Users
           </h2>
           <table class="table">
            <thead>
             <th>
              image
             </th>
             <th>
              name
             </th>
             <th>
             </th>
            </thead>
            <tbody>
             <% @users.each do |user| %>
              <tr>
               <td>
                <%= attachment_image_tag @user,:profile_image,fallback: "bou.jpg", size: "100x100" %>
               </td>
               <td>
                <%= user.name %>
               </td>
               </td>
               <td>
               </td>
               <td>
                 <%= link_to "Show", user_path(current_user.id) %>
               </td>
              </tr>
              <% end %>
            </tbody>
         </div>
      </div>
    </div>