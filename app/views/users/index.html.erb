<head>
 <meta charset="utf-8">
 <link rel="stylesheet" href="bookers2/app/assets/stylesheets/users.scss">
 <script src="https://kit.fontawesome.com/34c9407723.js" crossorigin="anonymous"></script>
</head>
<main class="user">
     <p>
     <% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
    <% end %>
    <div class="container">
     <div class="row">
      <div class="col-lg-4">
         <h2>
           User info
         </h2>
          <%= attachment_image_tag(@users,:profile_image,:fill,80,80,fallback: " ") %>
         <table class="table">
            <tbody>
             <tr></tr>
               <th>
                name
                <%= current_user.name %>
               </th>
               <th>
               </th>
               <tr></tr>
               <th>
                introduction
                <%= current_user.introduction %>
               </th>
               <th>
               </th>
            </tbody>
         </table>
         <div class="edit">
          <%= link_to " ", edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
         </div>
　　　　　　<h2>
　　　　　　  New book
　　　　　　</h2>
　　　　　　<td class="form">
　　　　　　<%= form_with model:@book, local:true do |f| %>
　　　　　　<p4>Title</p4><br>
　　　　　　  <%= f.text_field :title %><br>
　　　　　　<p4>Opinion</p4><br>
　　　　　　  <%= f.text_area :body %>
　　　　　　<%= f.submit "Create book", class: "btn btn-success" %>
　　　　　　<% end %>
　　　　　　</td>
　　　</div>
         <div class="col-lg-8">
           <h2>
             Users
           </h2>
           <table class="table">
            <thead>
             <th>
              image
             </th>
             <th>
              name
             </th>
             <th>
             </th>
            </thead>
            <tbody>
             <% @user.each do |user| %>
              <tr>
               <td>
                <%= image_tag 'bou.jpg', class: 'icon' %>
               </td>
               <td>
                <%= user.name %>
               </td>
                <%= user.introduction %>
               <td>
                <%= link_to "Show", user_path(current_user.id) %>
               </td>
              </tr>
                <% end %>
            </tbody>
         </div>
      </div>
    </div>